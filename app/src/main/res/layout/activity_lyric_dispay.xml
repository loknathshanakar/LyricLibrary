<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.lokanath.lyriclibrary.LyricDispay">

    <TextView
        android:id="@+id/lyricdisplayTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:height="100dp"
        android:background="#404A8C"
        android:maxLines="3"
        android:text="New Text"
        android:textColor="#ffffff" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/lyricdisplayTV">

        <TextView
            android:id="@+id/lyricdispalyLyric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/lyricdisplayTV"
            android:background="#F1F2F9"
            android:maxLines="1000"
            android:nestedScrollingEnabled="false"
            android:scrollbars="vertical"
            android:text="New Text"
            android:textAlignment="center"
            android:textColor="#0D0F1C" />

    </ScrollView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:minHeight="100dp"
        android:minWidth="100dp" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageView2"
        android:layout_gravity="bottom|end"
        android:src="@android:drawable/ic_menu_save" />

</RelativeLayout>
